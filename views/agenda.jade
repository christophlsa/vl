h1 Tagesordnung
table
   thead
      tr
         th.id-col #
         th Titel
         th &nbsp;
   tbody
      - for item in items
         tr
            td.id-col= item.id
            td= item.title
            td
               button.agenda-call(data-id=item.id) ▶
   tfoot
      tr
         td
            input#item-id
         td
            input#item-title
         td
            button#submit-item(style='font-weight:bold') +

script(type='text/javascript')
   $('#submit-item').click(function(ev) {
      var item = { id: $('#item-id').val(), title: $('#item-title').val() };
      $.ajax({
         type: 'PUT',
         url: '/agenda/' + item.id,
         data: item
      });
   });

   $('.agenda-call').click(function(ev) {
      var id = $(ev.target).attr('data-id');
      $.ajax({
         type: 'PUT',
         url: '/current',
         data: { id: id },
         success: function(data, status) {
            $(ev.target).attr('style', 'background-color: green');
         }
      });
   });

